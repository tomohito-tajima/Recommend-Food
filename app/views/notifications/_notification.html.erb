<% visiter = notification.visitor %>
<% food = notification.food %>

<div class="user-view clearfix ">
  <%= link_to user_path(notification.visitor) do %>
    <%= attachment_image_tag visiter, :profile, :fill,100,100, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class:"profile-img-circle" %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} ago)" %></span>
  <br>
  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
  <% end %>
</div>