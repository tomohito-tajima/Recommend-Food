<main>
  <div class="container">
    <div style="text-align: center; center; margin: 20px 0;">
        <span style=" padding: 10px 50px; margin-bottom: 10px; background-color: orange; color: white; border-radius: 10px;">Food一覧</span>
    </div>

    <div style="text-align: center; center; margin: 20px 20%;">
      　<table class="table table-hover table-bordered">
      　   <thead>
            <tr>
              <th></th>
              <th style = "text-align: center">お店名</th>
              <th style = "text-align: center">ジャンル名</th>
              <th style = "text-align: center">ユーザ名</th>
              <th></th>
            </tr>
          </thead>

          <% @foods.each do |food| %>
            <tbody>
              <tr>
                <td style ="text-align: center;"><%= attachment_image_tag food, :image, :fill, 70, 70, format: 'jpg', fallback: "no_image.jpg" %></td>
                <td style="text-align: center; padding: 30px 0;"><%= food.name %></td>
                <td style="text-align: center; padding: 30px 0;"><%= food.genre %></td>
                <td style="text-align: center; padding: 30px 0;"><%= food.user.name %></td>
                <td style="text-align: center; padding: 30px 0;"><%= link_to "詳細", food_path(food.id), class: "btn btn-block btn-sm btn-primary" %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      <div style="text-align: center; center; margin: 20px 0;">
        <%= paginate @foods, class: "pagination" %>
      </div>
    </div>
  </div>
</main>