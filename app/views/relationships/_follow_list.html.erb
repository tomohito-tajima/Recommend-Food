<% if @users.exists? %>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>ユーザ名</th>
        <th>投稿件数</th>
        <th>フォロー数</th>
        <th>フォロワー数</th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td></td>
          <td><%= user.name %></td>
          <td><%= user.foods.count %></td>
          <td><%= user.followings.count %></td>
          <td><%= user.followers.count %></td>
          <td><%= link_to "詳細", user_path(user.id), class: "btn btn-block btn-sm btn-primary" %></td>
          <td>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-block btn-sm btn-danger" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-block btn-sm btn-primary" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>