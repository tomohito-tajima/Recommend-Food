<% if @users.exists? %>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th></th>
        <th>ユーザ名</th>
        <th>投稿件数</th>
        <th>フォロー数</th>
        <th>フォロワー数</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td style="text-align: center;"><%= attachment_image_tag user, :profile, :fill, 60, 60, format: 'jpeg' %></td>
          <td style="padding: 25px 0; text-align: center;"><%= user.name %></td>
          <td style="padding: 25px 0; text-align: center;"><%= user.foods.count %></td>
          <td style="padding: 25px 0; text-align: center;"><%= user.followings.count %></td>
          <td style="padding: 25px 0; text-align: center;"><%= user.followers.count %></td>
          <td style="padding: 25px 0; text-align: center;"><%= link_to "詳細", user_path(user.id), class: "btn btn-block btn-sm btn-primary" %></td>
          <td style="padding: 25px 0; text-align: center;">
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-block btn-sm btn-danger" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-block btn-sm btn-primary" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>