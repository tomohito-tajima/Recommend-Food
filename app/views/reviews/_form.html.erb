<div class = "rating-box mt-3">
  <%= form_with model: review, url: food_reviews_path(food), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <!--星の表示-->
        <i class="fa fa-star-o" id="star"></i>
        <i class="fa fa-star-o" id="star"></i>
        <i class="fa fa-star-o" id="star"></i>
        <i class="fa fa-star-o" id="star"></i>
        <i class="fa fa-star-o" id="star"></i>
      </div>
      <!--ユーザーが星をいくつ入力しているか表示させる-->
      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <!--hidden_fieldはview上には表示されないがデータを送信できる-->
    <%= f.hidden_field :food_id, value: food.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_field :content, class: "textarea" %>
    <%= f.submit "保存", class: "button mt-3" %>
  <% end %>
</div>
<script src="https://kit.fontawesome.com/269075dec1.js" crossorigin="anonymous"></script>
