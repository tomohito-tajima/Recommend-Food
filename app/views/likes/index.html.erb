<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div style="text-align: center; center; margin: 30px 0 40px 0; padding: 0 30%;">
      <h3 style=" padding: 10px 50px; margin-bottom: 10px; background-color: orange; color: white; border-radius: 10px;"><strong>お気に入り一覧</strong></h3>
      </div>

      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th style = "text-align: center">お店名</th>
          <th style = "text-align: center">ユーザ名</th>
          <th style = "text-align: center">いいね数</th>
          <th></th>
        </thead>

        <tbody>
          <% @like_foods.each do |like_food| %>
            <tr>
              <td><%= attachment_image_tag like_food, :image, :fill, 60, 60, format: 'jpg', fallback: "no_image.jpg" %></td>
              <td style = "text-align: center; padding: 20px 0;"><%= like_food.name %></td>
              <td style = "text-align: center; padding: 20px 0;"><%= like_food.user.name %></td>
              <td style = "text-align: center; padding: 20px 0;">
                <div id="like-btn-<%= like_food.id %>">
                  <%= render 'likes/like', food: like_food %>
                </div>
              </td>
              <td style = "text-align: center; padding: 20px 0;"><%= link_to "詳細", food_path(like_food.id), class: "btn btn-block btn-sm btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>